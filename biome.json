{
	"$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
	"assist": { "actions": { "source": { "organizeImports": "off" } } },
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"**",
			"!**/*.js",
			"!**/*.mjs",
			"!**/*.gen.tsx",
			"!**/*.gen.ts",
			"!**/dist",
			"!**/node_modules",
			"!**/coverage",
			"!**/exhibits-wrapped"
		]
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"trailingCommas": "all"
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 81
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"useExhaustiveDependencies": "off",
				"useValidTypeof": "off"
			},
			"complexity": {
				"noBannedTypes": "off",
				"noCommaOperator": "off"
			},
			"suspicious": {
				"noAssignInExpressions": "off",
				"noConfusingVoidType": "off",
				"noExplicitAny": "off"
			},
			"style": {
				"noParameterAssign": "off",
				"noUnusedTemplateLiteral": "off",
				"useTemplate": "off"
			}
		}
	}
}
