{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignoreUnknown": true,
		"ignore": [
			"*.js",
			"*.mjs",
			"*.gen.tsx",
			"*.gen.ts",
			"dist",
			"node_modules",
			"coverage",
			"exhibits-wrapped"
		]
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"trailingComma": "all"
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 81,
		"ignore": []
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"useExhaustiveDependencies": "off"
			},
			"complexity": {
				"noBannedTypes": "off"
			},
			"suspicious": {
				"noAssignInExpressions": "off",
				"noConfusingVoidType": "off",
				"noExplicitAny": "off",
				"useValidTypeof": "off"
			},
			"style": {
				"noCommaOperator": "off",
				"noParameterAssign": "off",
				"noUnusedTemplateLiteral": "off",
				"useTemplate": "off"
			}
		}
	}
}
