{
	"compilerOptions": {
		"lib": ["ES2022", "dom"],
		"module": "Preserve",
		"moduleResolution": "Bundler",
		"noEmit": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"jsx": "react-jsx",
		"skipLibCheck": true,
		"strictBindCallApply": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"target": "ES2019",
		"types": ["vitest/globals"],
		"baseUrl": "./",
		"paths": {
			"~": ["."],
			"~/*": ["./*"]
		}
	},
	"exclude": ["**/*.node.ts", "./apps"]
}
