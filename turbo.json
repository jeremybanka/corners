{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {

      "dependsOn": ["^build"],

      "outputs": ["dist/**"]
    },
    "test:once": {

      "dependsOn": ["build"],

      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    },
    
    "lint:rome": {
			"cache": false
		},
		"lint:eslint": {},
		"lint": {
			"dependsOn": ["lint:rome", "lint:eslint"]
		},    "deploy": {

      "dependsOn": ["build", "test:once", "lint"]
    }
  }
}
